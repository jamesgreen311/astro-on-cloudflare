---
export interface Props {
	title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" /><link
			rel="preconnect"
			href="https://fonts.googleapis.com"
		/>
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap"
			rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />
		<link rel="shortcut icon" type="image/png" href="/favicon.png" />
		<title>{title}</title>
	</head>
	<body>
		<header class="bg-indigo-200 border-b-8 border-amber-100 pt-8">
			<h1 class="text-3xl font-extrabold text-purple-800 m-0 pl-3">Walking On The Edge Studio</h1>
		</header>
		<header class="bg-indigo-400 text-slate-100 py-2 px-6">
			<h2 class="text-base">James Green Fine Art</h2>
		</header>
		<main>
			<slot />
		</main>
		<footer class="border-t-8 border-orange-400 bg-purple-800 p-8 text-right">
			<span class="text-base text-slate-100">James Green Fine Art - Walking On The Edge Studio &copy; 2023</span>
		</footer>
		<!-- <script async src="//embedr.flickr.com/assets/client-code.js" charset="utf-8"></script> -->
	</body>
</html>
<style is:global>
	:root {
		/* Dances with Rain scheme */
		--byzantium: hsla(309, 43%, 34%, 1); /* text-fuchsia-800 #86198f */
		--light-background-color: hsl(270, 100%, 98%); /* text-purple-50 #faf5ff */
		--dark-background-color: hsl(217, 33%, 17%);/* slate-800 #1e293b */
		--gainsboro: hsla(195, 6%, 86%, 1); /* slate-100 #f1f5f9 */
		--maximum-purple: hsla(283, 33%, 42%, 1); /* purple-800 #6b21a8 violet-800 #5b21b6 fuchsia-900 #701a75*/
		--light-periwinkle: hsla(233, 28%, 78%, 1); /* text-indigo-200 #c7d2fe */
		--glaucous: hsla(220, 39%, 55%, 1); /* indigo-300, 400 #a5b4fc, #818cf8 */
		--amaranth-pink: hsla(340, 79%, 79%, 1); /* text-pink-400, 300, 200 #f472b6, #f9a8d4, #fbcfe8 */
		
		/* Accent colors added */
		--tangerine: hsla(30, 95%, 57%, .95); /* orange-400 #fb923c */
		--lemon-chiffon: rgba(255, 247, 0, 0.95); /* amber-100 #fef3c7 */
		/* --olivine: hsla(84, 37%, 59%, 1);  */

		--primary-color: var(--maximum-purple);
		--secondary-color: var(--light-periwinkle);
		--tertiary-color: var(--glaucous);
		--accent-color-1: var(--amaranth-pink);
		--accent-color-2: var(--lemon-chiffon);
		--light-text-color: var(--gainsboro);
		--dark-text-color: hsl(295, 70%, 33%);
		--accent-gradient: linear-gradient(
			90deg,
			var(--accent-color-1),
			var(--secondary-color) 30%,
			var(--tertiary-color) 60%
		);
		--text-gradient: linear-gradient(
			180deg,
			var(--accent-color-1),
			var(--secondary-color) 30%,
			var(--primary-color) 60%
		);
	}
	html {
		font-family: "Merriweather", serif;
		background-color: var(--light-background-color);
		color: var(--dark-text-color);
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
			DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}

	h1 {
		font-size: 2rem;
	}
</style>
